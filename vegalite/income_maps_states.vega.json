{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Weekly Income per State in Australia",

  "params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "range",
        "min": 1983,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "projection": {
    "type": "mercator"
  },

  "layer": [

    { 
      "data": {
        "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/topojson/naturalearthdata_10m_australian_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 2
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/data/income_by_state_no_quotation.csv"
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/topojson/naturalearthdata_10m_australian_states.json",
              "format": {
                "type": "topojson",
                "feature": "ne_10m_admin_1_states_provinces"
              }
            },
            "key": "properties.NAME"
          }
        },
        {"filter": "datum.Year == Year_selection"}
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Income",
          "type": "quantitative",
          "title": "Income",
          "scale": {
            "scheme": "plasma",
            "type": "linear"
          }
        },
        
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Income",
            "type": "quantitative",
            "title": "Income"
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    }
  ],
  "config": {}
}
