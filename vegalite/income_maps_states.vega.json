{
  "width": 640,
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Median Weekly Income per State in Australia",
  "width": 300,
  "height": 300,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1983,
        "max": 2023,
        "step": 1,
        "name": "Income Year:"
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/topojson/naturalearthdata_10m_australian_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 2
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/data/income_by_state_long.json"
      },
      "transform": [
        {
          "filter": "datum.Year == Year_selection"
        },
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/rlim0045/FIT3179-Assignment-2/refs/heads/main/topojson/naturalearthdata_10m_australian_states.json",
              "format": {
                "type": "topojson",
                "feature": "ne_10m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Income",
          "type": "quantitative",
          "title": "Income",
          "scale": {
            "scheme": "blues"
          },
          "legend": {
            "format": ".2s"
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Income per Week",
            "type": "quantitative",
            "title": "Income",
            "format": "$,.2f"
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    }
  ]
}
